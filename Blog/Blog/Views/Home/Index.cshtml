@model List<BlogData>
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <form asp-controller="Home" asp-action="index">
        <input name="searchText" type="text" placeholder="Axtarmaq üçün bura yazın">
        <button  style="background-color:black; color:white; margin-top:6px;" type="submit">Axtar </button>
    </form>

</div>

@if (Model.Count > 0)
{
    <div style="display:flex;justify-content:space-evenly;cursor:pointer; margin-top:45px;">
        
        @foreach (var item in Model)
        {
            <a asp-controller="Home" asp-action="detail" asp-route-id="@item.Id">
            <div>
                <img src="~/img/@item.Image" />
                <h2>@item.Title</h2>
                <p>@item.Description</p>
            </div>
            </a>
        }

    </div>
}else
{
        <h1>Bele data yoxdu</h1>
}






